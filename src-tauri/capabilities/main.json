{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "store:default",
    "cli:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "pwsh",
          "cmd": "pwsh",
          "args": [
            "/C",
            {
              "validator": ".*"
            }
          ],
          "sidecar": false
        },
        {
          "name": "zsh",
          "cmd": "zsh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    },
    "os:default"
  ]
}
